# HeadHunter API credentials
# Получите на https://dev.hh.ru/admin
CLIENT_ID=your_client_id_here
CLIENT_SECRET=your_client_secret_here

# URL для callback после авторизации
# Должен совпадать с URL, указанным при регистрации приложения
REDIRECT_URI=https://yourdomain.com/callback

# Flask secret key
# Сгенерируйте криптографически стойкий ключ:
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secure_random_secret_key_here

# User-Agent для запросов к API HH.ru
# Укажите название приложения и контактный email
USER_AGENT=HH Limits/1.0 (your_email@example.com)

# Порт приложения
PORT=6859
